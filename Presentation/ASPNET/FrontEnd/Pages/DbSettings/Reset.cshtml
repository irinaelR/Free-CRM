@page
@{
    ViewData["Title"] = "Expense List";
}

<div id="app">
    <div class="row">
        <div class="col-2">
            <p>
                Only the system data (admin login, unit measures...) will be kept.
            </p>
            <button type="button"
                    class="btn btn-danger"
                    v-on:click="handler.handleWipe">
                Empty the database
            </button>
        </div>
        <div class="col-2">
            <form enctype="multipart/form-data">
                <div>
                    <label for="file">Choose a CSV file:</label>
                    <input type="file" id="file" name="file">
                </div>
                <div>
                    <button type="button" v-on:click="handler.uploadCsv">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/FrontEnd/Pages/DbSettings/Reset.cshtml.js"></script>
}